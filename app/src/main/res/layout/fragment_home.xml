<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fargment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#21A6E2"
        android:gravity="center"
        android:padding="8dp"
        >
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:background="#21A6E2"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Bạn đang tìm kiếm điều gì"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#8399DB"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_shop"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:background="#21A6E2"
            />


    </LinearLayout>
    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/linearlayout1"
        android:padding="10dp"
        android:src="@drawable/ic_view2"
        />
    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/imageview1"
        android:background="#F8F3F3"
        android:layout_margin="10dp"
        android:padding="20dp">
        <android.widget.ImageButton
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cricle_bg"
            android:src="@drawable/ic_btn1"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bánh tươi"
            android:layout_below="@id/btn1"
            android:textStyle="bold"/>
        <android.widget.ImageButton
            android:id="@+id/btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cricle_bg"
            android:layout_toRightOf="@id/btn1"
            android:layout_marginLeft="30dp"
            android:src="@drawable/btn2"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giải khát"
            android:layout_toRightOf="@id/tv1"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/btn2"
            android:textStyle="bold"/>
        <android.widget.ImageButton
            android:id="@+id/btn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cricle_bg"
            android:layout_toRightOf="@id/btn2"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_btn3"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món ngon"
            android:layout_toRightOf="@id/tv2"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/btn2"
            android:textStyle="bold"/>
        <android.widget.ImageButton
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cricle_bg"
            android:layout_toRightOf="@id/btn3"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_btn4"
            />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoa quả"
            android:layout_toRightOf="@id/tv3"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/btn3"
            android:textStyle="bold"/>
        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/tv1">

            <android.widget.ImageButton
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/cricle_bg"
                android:src="@drawable/ic_btn5" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:layout_below="@id/btn5"
                android:textStyle="bold"/>

            <android.widget.ImageButton
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="31dp"
                android:layout_toRightOf="@id/btn5"
                android:background="@drawable/cricle_bg"
                android:src="@drawable/ic_btn6" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mới nhất"
                android:layout_toRightOf="@id/tv5"
                android:layout_marginLeft="40dp"
                android:layout_below="@id/btn5"
                android:textStyle="bold"/>
            <android.widget.ImageButton
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="31dp"
                android:layout_toRightOf="@id/btn6"
                android:background="@drawable/cricle_bg"
                android:src="@drawable/ic_btn7" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thực phẩm"
                android:layout_toRightOf="@id/tv6"
                android:layout_marginLeft="35dp"
                android:layout_below="@id/btn7"
                android:textStyle="bold"/>
            <android.widget.ImageButton
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="31dp"
                android:layout_toRightOf="@id/btn7"
                android:background="@drawable/cricle_bg"
                android:src="@drawable/ic_btn8" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:layout_toRightOf="@id/tv7"
                android:layout_marginLeft="40dp"
                android:layout_below="@id/btn8"
                android:textStyle="bold"/>


        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout1"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_imgview2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Kẹo Snickers"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Socola 15Gr"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="23,000"
                    android:textStyle="bold"
                    android:textColor="#D73535"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_banhoreo"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Bánh Oreo"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Socola 20Gr"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="15,000"
                    android:textStyle="bold"
                    android:textColor="#D73535"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_imgview2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Kẹo Snickers"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Socola 15Gr"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="23,000"
                    android:textStyle="bold"
                    android:textColor="#D73535"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>