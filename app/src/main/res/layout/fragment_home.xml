<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#A99B9B">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Featured"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search Icon"
            android:layout_marginEnd="8dp" />

        <!-- Filter Icon -->
        <ImageView
            android:id="@+id/filterIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/loc"
            android:contentDescription="Filter Icon" />
    </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:background="@drawable/bc_imgview">
         <ImageView
             android:layout_width="50dp"
             android:layout_height="match_parent"
             android:src="@drawable/ic_search"
             android:background="#857B7B"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="Seach"
            />

     </LinearLayout>



    <!-- First Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_marginBottom="16dp">

        <!-- Image Placeholder -->

        <!-- Seller Information -->
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/sellerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Information"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Second Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white">

        <!-- Image Placeholder -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >

            <!-- Cart Icon -->
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/shop"
                android:contentDescription="Cart Icon"
                android:layout_marginStart="290dp"
                android:layout_marginTop="8dp" />

            <!-- Bookmark Icon -->
            <ImageView
                android:id="@+id/bookmarkIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ring"
                android:contentDescription="Bookmark Icon"
                android:layout_toRightOf="@+id/cartIcon"
                android:layout_marginTop="8dp"
                 />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
